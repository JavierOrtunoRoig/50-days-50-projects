---
import Layout from "../Layout.astro";
---

<Layout>
	<div class="w-2/3 flex flex-col justify-center items-center gap-8">
		<h1 class="text-6xl font-bold text-white">50 day 50 projects</h1>

		<ul class="w-full grid grid-cols-5"></ul>
	</div>
</Layout>

<style></style>

<script>
	import projects from "@/projects.json";

	const $ul = document.querySelector("ul") as HTMLUListElement;
	projects.forEach((project) => {
		const $li = document.createElement("li");
		const $a = document.createElement("a");
		const done = project.done ? "✅" : "❌";

		$a.classList.add("hover:text-blue-400");
		$a.href = project.urlSegment;
		$a.textContent = `${done} ${project.name}`;
		$li.appendChild($a);
		$ul.appendChild($li);
	});
</script>
